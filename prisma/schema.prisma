// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema
 // id                 String  @id @default(cuid())

 
generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
     provider  = "postgresql"
     url       = env("DATABASE_URL")
   }


model User {
  id   Int @id @default(autoincrement())
  name String? 
  image String?
  image2 String? 
  email String @unique
  emailVerified DateTime?  
  password String? 
  telephone String?
  color String?
  bio String?  
  visible Boolean @default(false)
  role String @default("Student")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  sessions Session[]
  accounts Account[]
  purchases Purchase[]
  comments Comment[]
  posts Post[]
  customerInvoices Invoice[] @relation("CustomerInvoices")
  managerInvoices Invoice[] @relation("ManagerInvoices")
}
model Contact {
  id   Int @id @default(autoincrement())
  name String?
  lastname String?
  email String @unique
  telephone1 String?
  telephone2 String?
  labels String?  
  createdAt DateTime @default(now())  
  status String @default("Subscribed")
  source String 
  lastactivity String?
  lastcontact DateTime? 

  
}
model EventTemplate {
  id Int @id @default(autoincrement())
  eventtype EventType @default(Group)
  length Int
  amount Int @default(1)
  color String? 
  image String?
  tag String
  title String?
  location String?
  description String?
  visible Boolean
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  teachersid Int[]
  events Event[]
  options PriceOptions[]
}
model PriceOptions {
  id Int @id @default(autoincrement()) 
  price Float
  tag String 
  amount Int @default(1)
  templateID Int
  template EventTemplate @relation(fields: [templateID], references: [id] )
}
model Event {
   id Int @id @default(autoincrement())
   date String
   templateID Int
   tag String
   image String?
   eventtype EventType @default(Group)
   length Int 
   teachersid Int[]
   title String?
   location String?
   description String?
   visible Boolean
   template EventTemplate @relation(fields: [templateID], references: [id] )
   tables Int[]
   tableName String? @default("Table")
   seatmap String?
   specialEvent Boolean @default(false)
}
model Category {
  id    String  @id @default(cuid()) @map("_id")
  slug  String  @unique
  title String
  img   String?
  Posts Post[]
}

model Post {
  id        String    @id @default(cuid()) @map("_id")
  createdAt DateTime  @default(now())
  slug      String    @unique
  title     String
  desc      String
  img       String?
  views     Int       @default(0)
  catSlug   String
  keywords  String @default("")
  userID    Int
  cat       Category  @relation(fields: [catSlug], references: [slug])
  user      User @relation(fields: [userID], references: [id] )
  comments  Comment[]
}

model Comment {
  id        String   @id @default(cuid()) @map("_id")
  createdAt DateTime @default(now())
  desc      String 
  userID    Int
  user      User @relation(fields: [userID], references: [id] )
  postSlug  String
  post      Post     @relation(fields: [postSlug], references: [slug])
}
model ScheduleEvent {
   id Int @id @default(autoincrement())
   date String
   tag String @default("")
   eventtype EventType @default(Private)
   length Int
   teachersid Int[]
   studentid Int[]
   location String?
   confirmed Boolean @default(false)
   sequence Int @default(-1)
   sessionNumber String?
}
model Purchase {
id Int @id @default(autoincrement())
activityID Int
status StatusType
seat Int?
table Int?
userID Int?
personNote String?
invoice String
createdAt DateTime @default(now())
purchasedAt String
image String
eventtype EventType @default(Group)
tag String
price Float
amount Int @default (1)
date String?
user User? @relation(fields: [userID], references: [id] )
}
model Party {
  id Int @id @default(autoincrement())
  image String
  name String
  message String
  mode String
  fontSize Int @default(12)
  displayedPictures String[]
  displayedVideos String[]
  videoChoice String
  compLogo String
  titleBarHider Boolean @default(false)
  showUrgentMessage Boolean @default(false)
  displayedPicturesAuto String[]
  seconds Int @default(10)
  manualPicture String
  savedMessages String[]
  textColor String
  updatedAt DateTime @updatedAt @default(now())
}
model SettingVar {
  id Int @id @default(autoincrement())
  front_templates_ids Int[]
  hours String[]
  weddingPackages Int[]
  specialPackage  Int @default(-1)
  giftCertificates String @default("[]")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt 
}
enum EventType {
  Private
  Group
  Party
  Floor_Fee
  Blocked
}
enum StatusType {
  Purchased
  Used
  Pending
}
model Account {
  id Int @id @default(autoincrement())
  userId             Int   
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?  
  access_token       String?   
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?  
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id Int @id @default(autoincrement())
  sessionToken String @unique
  userId Int
  expires DateTime
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  id Int @id @default(autoincrement())
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Picture {
  id        String  @id @default(cuid())
  file      String
  file_name String
}


model Invoice {
  id             String           @id @default(cuid()) @map("_id")
  manager        User             @relation("ManagerInvoices", fields: [managerId], references: [id])
  customer       User             @relation("CustomerInvoices", fields: [customerId], references: [id])
  customerId     Int 
  managerId      Int
  installments   Installment[]
  expirationDate DateTime?
  sessions       InvoiceSession[]
  discount       Float?
  packageType    String
  effectiveDate  DateTime
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
  // Mongoose virtual 'invoiceTotal' was here.
  // It calculated the total invoice amount based on sessions and discounts.
  // Mongoose virtual 'paid' was here.
  // It calculated the total amount paid from installments.

  @@map("invoices")
}

model Installment {
  id        String   @id @default(cuid()) @map("_id")
  date      DateTime
  paymentMethod  String
  amount    Float
  isPaid    Boolean
  invoice   Invoice  @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
  invoiceId String

  @@map("installments")
}

model InvoiceSession {
  id               String      @id @default(cuid()) @map("_id")
  sessionType      EventType
  price            Float
  discount         Float
  numberOfSessions Int
  invoice          Invoice     @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
  invoiceId        String

  @@map("invoice_sessions")
}